<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<br/>
	
    <%= f.input :title %>
		<%= f.input :short %>
    <%= f.input :mailchimp_list_id %>
    <%= f.select :category, ['web', 'data', 'product', 'design', 'mobile'] %>
		<%= f.input :date %>
		<%= f.input :length %>
		<%= f.input :price %>
		<%= f.input :address %>
		<%= f.input :eventbrite_url %>
		<%= f.input :image %>
		
		<h3>PROF</h3>
		<%= f.input :teacher_name %>
		<%= f.input :teacher_image %>
		<%= f.input :teacher_desc %>
		<%= f.input :teacher_linkedin %>
		<%= f.input :teacher_twitter %>
		
		
		
    <%= f.cktext_area :content, :class => "someclass", :ckeditor => {:language => "fr"} %>
  </div>

	<br/>
    <%= f.button :submit %>
<% end %>


<%= button_to "delete", @course, :method=>:delete, :class=>:destroy %>

