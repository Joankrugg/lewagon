<% content_for :title, "Le Wagon Bar - Cours à la carte" %>
<div class="row-fluid">
<div class="span10 offset1">

	<div class="row-fluid">
		<div class="span3">
			<div class=" pgrme-wagonbar">
				<div class="center"><%= image_tag "logo-wagonbar@2x.png", width: "200px"%></div>
				<br/>
				<ul>
				<li style="margin-bottom:5px">Trouvez le bon cours</li>
				<li style="margin-bottom:5px">Achetez votre billet</li>
				<li style="margin-bottom:5px">Si vous n'êtes pas disponible, inscrivez-vous à la newsletter du cours pour une prochaine fois !</li>
				</ul>
			</div>
		</div>
		<div class="span9" id="courses-container">
			<% @courses_by_date.each do |date, courses| %>
				<h3 class="proxima-bold black"><%= l courses[0].date, format: :short, locale: :fr%></h3>
				<hr>
				<% courses.each do |c| %>
				<div class="row-fluid course">
					<div class="span2 center">
						<%= image_tag c.image.to_s%>
						<br><br>
						<%= image_tag "#{c.category.to_s}-blue.png", width: "50px"%>
					</div>
					<div class="span7 justify" style="padding-left:10px;padding-right:10px;">
						<h4><%= link_to  c.title , c , class: "black"%></h4>
						<p><%= c.short %></p>
						<p>
							<%= link_to  "+ d'infos" , c , style: "text-decoration:underline;"%>
						</p>
					</div>
					<div class="span3">
						<%= render partial: "infos", locals: {course: c}%>
					</div>
				</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
</div>
