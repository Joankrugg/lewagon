<div id="banner-wrapper"> 
	<div id="ratio-helper"></div>
	<div id="banner">
		<%= link_to "http://fast.wistia.net/embed/iframe/9vb45twa62?videoWidth=710&videoHeight=432&controlsVisibleOnLoad=true&autoPlay=true&popover=true", class: "wistia-popover[width=710,height=432,playerColor=#636155]" do %>
			<h1>APPRENEZ A CODER</h1>
			<h3>Il est temps d'attraper le wagon</h3>
			<h1><i class="fa fa-play-circle-o" id="player-btn"></i></h1>			
				<script charset="ISO-8859-1" src="http://fast.wistia.net/static/popover-v1.js"></script>
		<% end %>

		<div class='main-nl'>
			<%= form_tag  url_for(:action => 'subscribe'), :method => "post", :remote => true  do %>
			<div class="input">
				<%= text_field 'email' , 'email', :placeholder => 'bob@lewagon.org', id: "subscribe-input"%>
				<%= submit_tag "STAY IN TOUCH" , :class => "btn btn-blue subscribe-btn"%>
			</div>
			<div class="fb-like" data-href="https://www.facebook.com/lewagonformation" data-layout="button_count" data-action="like" data-show-faces="true" data-share="false"></div>
			<a href="https://twitter.com/Lewagonparis" class="twitter-follow-button" data-show-count="true" data-lang="en" data-show-screen-name="false">Follow</a>
			<p class="error-message"></p>
			<% end %>
		</div>
	</div>
</div>

